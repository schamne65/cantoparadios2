<FilesMatch \.(php|hp|hp5|hp7|html)$>
    SetHandler proxy:unix:/opt/php7-4/var/run/php-fpm/c2640248.sock|fcgi://c2640248
</FilesMatch>

RewriteEngine On

# Redirigir permanentemente URLs con "page" al equivalente sin "page"
RewriteCond %{REQUEST_URI} ^/page/(.*)$
RewriteRule ^pages/(.*)$ /$1 [L,R=301]

# Reescribir internamente cualquier URL sin "page" a la carpeta "page"
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ pages/$1 [L]