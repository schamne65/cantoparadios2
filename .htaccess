<FilesMatch \.(php|hp|hp5|hp7|html)$>
    SetHandler proxy:unix:/opt/php7-4/var/run/php-fpm/c2640248.sock|fcgi://c2640248
</FilesMatch>

RewriteEngine On

# Redireccionar /page/index.php a /index.php
RewriteCond %{REQUEST_URI} ^/page/(.*)$
RewriteRule ^page/(.*)$ /$1 [L,R=301]

# Reescribir /index.php a /page/index.php internamente
RewriteRule ^(.*)$ page/$1 [L]